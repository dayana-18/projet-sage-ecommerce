@model projet_sage_ecommerce.Models.CAdxModel

@{
    ViewBag.Title = "Commande";
}

<h1>Commandes</h1>
<p>Valider un devis ou créez une commande</p>
<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="pills-devis-tab" data-toggle="pill" href="#pills-devis" role="tab" aria-controls="pills-devis" aria-selected="true">A partir d'un devis</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="pills-commande-tab" data-toggle="pill" href="#pills-commande" role="tab" aria-controls="pills-commande" aria-selected="false">Créer une commande</a>
    </li>
</ul>
<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade" id="pills-devis" role="tabpanel" aria-labelledby="pills-devis-tab">
        <h2>Créer une commande à partir d'un devis</h2>
        @using (Html.BeginForm())
        {
            <h4>Numéro du devis : </h4>
            <div class="d-flex">
                <input class="form-control" type="search" name="nom_article_recherche" placeholder="Recherche">
                <div class="input-group-append">
                    <button class="btn btn-dark" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
            <p>@ViewData["sitevente"]</p>
        }
    </div>
</div>
